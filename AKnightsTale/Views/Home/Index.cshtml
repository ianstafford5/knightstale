@{
    var rank = 0;
    ViewBag.Title = "Home Page";
}

<div class="title">
    <h1>Download Now!</h1>
</div>

<!-- thumb navigation carousel -->

<!--/main slider carousel-->
<nav>
    <ul class="pager">
        <li class="previous"><a href="#myCarousel" data-slide="prev">‹ Prev</a></li>
        <li class="next"><a href="#myCarousel" data-slide="next">Next ›</a></li>
    </ul>
</nav>
<!-- main slider carousel -->
<div class="row" style="margin-bottom:20px">
    <div class="col-md-8" id="slider">
        <div id="myCarousel" class="carousel slide">
            <!-- main slider carousel items -->
            <div class="carousel-inner">
                <div class="active item" data-slide-number="0"><div class="center-block">
                        <span><img src="~/Images/poly1.jpg" class="center-block img-responsive"></span>
                    </div>

                </div>
                <div class="item" data-slide-number="1">
                    <img src="~/Images/poly2.jpg" class="img-responsive">
                </div>
                <div class="item" data-slide-number="2">
                    <img src="~/Images/poly3.jpg" class="img-responsive">
                </div>
                <div class="item" data-slide-number="3">
                    <img src="~/Images/poly4.jpg" class="img-responsive">
                </div>
                <div class="item" data-slide-number="4">
                    <img src="~/Images/poly5.jpg" class="img-responsive">
                </div>
                <div class="item" data-slide-number="5">
                    <img src="~/Images/poly1.jpg" class="img-responsive">
                </div>
            </div>
            <!-- main slider carousel nav controls -->
            <!--  -->
        </div>
    </div>
    <div class="col-md-4" id="sliderTab">
        <div class="container">
            <div class="about">
                <p>The Princess has been kidnapped and it is up to you to save her! Complete the quests, 
                and battle your way through the mythical creatures lurking in the forest to rescue her! 
                Don't forget to find the hidden treasures along the way!</p>
            </div>
            <button class="download-btn"  onclick="location.href='@Url.Action("Download", "Home")'">Download <i class="fas fa-download"></i></button>
        </div>
    </div>

</div>